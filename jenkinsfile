pipeline {
    agent any

    stages {
        stage('Build') {


            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode True
                }  
            }

            step {
                sh '''
                ls -la
                node --version 
                npm --version 
                npm ci
                npm run build 
                ls -la
                '''
            }


        }
    }
}
